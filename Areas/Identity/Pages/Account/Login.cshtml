@page
@model LoginModel

@{
    ViewData["Title"] = "Inicio sesion";
}

<h1>@ViewData["Title"]</h1>
<center>
  <img  class="rounded-Thumbnail" height="180" width="250"   
        asp-append-version="true"  src="/Images/logo-login.png"/>
            <form id="account" method="post">
            <div>
                <h3 style="font-weight:bold; color:black">Iniciar sesion</h3>
            </div>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="col-12 row">
                    <label asp-for="Input.Cedula"></label>
                    <input asp-for="Input.Cedula" class="form-control" />
                    <span asp-validation-for="Input.Cedula" class="text-danger"></span>
                </div>
                <div class="col-12 row">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <br/><br/>
                    <button type="submit" class="btn btn-dark  btn-lg">Iniciar sesion</button>
                
                <div class="col-12 row">
            <span class="col-12">
            <a href="/Identity/Account/Register" class="col-6">¿No tienes cuenta?</a>
                </span>
                 </div>
                 
            </form>

    </center>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
