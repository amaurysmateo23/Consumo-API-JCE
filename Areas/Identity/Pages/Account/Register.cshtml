@page
@model RegisterModel
@{
    ViewData["Title"] = "Registro";
}

<h1>@ViewData["Title"]</h1>
<center>
     <img  class="rounded-Thumbnail" height="180" width="180"   
        asp-append-version="true"  src="/Images/45109885-usuario-seleccionar-insertar-icono-de-vector-también-image-can-utilizarse-para-admin-salpicadero-adecu.jpg"/>

        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div>
            <h3 style="font-weight:bold; color:black">Registro sistema de secretos</h3>
        </div>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="col-12 row">
                <label asp-for="Input.Cedula"></label>
                <input asp-for="Input.Cedula" class="form-control col-12"/>
                <span asp-validation-for="Input.Cedula" class="text-danger"></span>
            </div>
            <div class="col-12 row">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password"class="form-control col-12" />
                <span asp-validation-for="Input.Password" cl ass="text-danger"></span>
            </div>
            <div class="col-12 row">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword"class="form-control col-12" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <br/><br/>
            <button type="submit" class="btn btn-dark  btn-lg">Registrar</button>
            <div class="col-12 row">
            <span class="col-12">
             <a href="/Identity/Account/Login" class="col-6">¿Tienes una cuenta?</a>
                </span>
                 </div>
        </form>

</center>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}